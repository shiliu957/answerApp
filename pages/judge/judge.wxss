/* pages/judge/judge.wxss */
.containerIndex{
	width: 100%;
	height: 100%;
}
.header {
	height: 70rpx;
	border-top: 2rpx solid #ccc;
	border-bottom: 2rpx solid #ccc;
	padding: 10rpx;
	/* line-height: 70rpx; */
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.header-right {
	display: flex;
	align-items: center;
}
.header-right .timer {
	text-align: center;
	line-height: 10rpx;
	margin-bottom: 30rpx;
}
.timer view {
	font-size: 25rpx;
}
.collect {
	margin: 0 20rpx;
}
.header-right image {
	width: 45rpx;
	height: 45rpx;
}

.main {
	box-sizing: border-box;
	height: 1000rpx;
	width: 100%;
	padding: 10rpx 0 0 10rpx;
	display: flex;
}
.mainItem {
	height: 1000rpx;
	margin-right: 10rpx;
}
.title {
	margin-top: 20rpx;
	font-weight: 700;
}
.topic {
	margin: 30rpx 0;
}

.tabItem {
	height: 70rpx;
	background: #f0f0f0;
	margin-bottom: 20rpx;
	border-radius: 10rpx;
	line-height: 70rpx;
}
.tabItem .A {
	margin: 0 20rpx;
}
.error {
	background-color: red;
	color: #fff;
}

.right {
	background-color: #31c27c;
	color: #fff;
}
