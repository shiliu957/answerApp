  </view>



  <view class="choiceTitle Position">
    <text>【{{info.id}}】 {{info.title}}</text>
  </view>

<!-- 单选题 -->
  <view class="MultipleChoice Position">
    <radio-group class="radio-group" bindchange="radioChange">
      <label class="radio">
        <radio value="{{info.topic_a}}"/>
        A、{{info.topic_a}}
      </label>
      <label class="radio">
        <radio value="{{info.topic_b}}"/>
        B、{{info.topic_b}}
      </label>
      <label class="radio">
        <radio value="{{info.topic_c}}"/>
        C、{{info.topic_c}}
      </label>
      <label class="radio">
        <radio value="{{info.topic_d}}"/>
        D、{{info.topic_d}}
      </label>
    </radio-group>
  </view>


  <view class="BottomBox">
    <view  class="bottomLift">
